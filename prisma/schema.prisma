generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Profile {
  id                         String   @id @default(auto()) @map("_id") @db.ObjectId
  mobile                     String   @default("")
  city                       String   @default("")
  dist                       String   @default("")
  reciveNotificationInPublic Boolean  @default(false)
  isBlocked                  Boolean  @default(false)
  regesterFrom               String   @default("")
  user                       User     @relation(fields: [userId], references: [id])
  userId                     String   @unique @db.ObjectId // relation scalar field (used in the `@relation` attribute above)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String   @default("")
  email             String   @default("") // update to unique
  avatar            String   @default("")
  password          String   @default("")
  isVerified        Boolean  @default(false)
  VerifiedToken     String   @default("")
  PassRecoveryToken String   @default("")
  role              String   @default("user")
  profile           Profile?
  Car               Car?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Car {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  carType   String   @default("")
  carModel  String   @default("")
  carYear   String   @default("")
  carImage  String   @default("")
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique @db.ObjectId // relation scalar field (used in the `@relation` attribute above)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
